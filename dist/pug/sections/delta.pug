- var delta = [{title: "delta nb", imgUrl: "images/img_2.png"}];
- var security = "Для механической защиты изоляции и утеплителя или в качестве замены бетонной подготовки используется специальная профилированная мембрана Delta NB, надежно разделяющая поверхность основания и влажную почву. Выполняет роль деформационного слоя для перераспределения нагрузки. Может использоваться для создания систем питьевой воды";

mixin profil-card(mexanick)
 li
  div(class="products__left")
   span(class="product__title")=mexanick.title
    img(src=mexanick.imgUrl)
    a(href="#" class="products__btn")
     span Заказать
  div(class="products__right")
   p.
    #{security}
   div(class="products__btns")
    div(class="products__btn-left")
     a(href="#" class="product__btn")
      span Описание
     a(href="#" class="product__btn")
      span Характеристики
    div(class="products__btn-right")
     a(href="#" class="product__btn-2")
      span На складе 123 р/м

for mexanick in delta
   +profil-card(mexanick)




